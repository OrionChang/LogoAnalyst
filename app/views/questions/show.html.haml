- model_class = Question
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:question_content) + ':'
  %br
  .longtext= @question.question_content
%hr
%ol
  -for answer in @question.answers
    %li.longtext= h answer.answer_content


.form-actions
  = link_to t('.edit', :default => t("helpers.links.edit")), {:action => 'edit', :id => @question}, {:class => 'btn'}
  = link_to t('.destroy', :default => t("helpers.links.destroy")), question_path(@question), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
  = link_to t('.back', :default => t("helpers.links.back")), {:action => "index"}, { :class => 'btn'}