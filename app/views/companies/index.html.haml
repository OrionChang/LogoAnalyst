.accordion#accordion2
  - @industries.each do |industry|
    .accordion-group
      .accordion-heading
        %a.accordion-toggle(data-toggle="collapse" data-parent="#accordion2" href="#industry_#{industry.id}")
          =industry.name
      .accordion-body.collapse{:id => "industry_#{industry.id}",:class => industry == @industries.first ? "in" : ""}
        .accordion-inner
          %table.table.table-striped
            %thead
              %tr
                %th Sector:
                %th Company:
                %th Symbol:
            %tbody
              - industry.sectors.each do |sector|
                - sector.companies.each do |company|

                  %tr
                    %td
                      -#%a(data-toggle="modal" href="#company-show-#{company.id}")=company.name
                      -#= render :partial => company, :object => company, :remote => true

                      =link_to company.name, company, :remote => true

                    %td= company.name
                    %td= company.symbol

